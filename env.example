# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# System Configuration
SYSTEM_PROMPT=You are a helpful WhatsApp assistant. Keep replies brief and friendly.
PORT=3000
DASHBOARD_PORT=4000
NODE_ENV=production

# Licensing (Required)
# Set both variables. The app POSTS { key, instanceId } to LICENSE_VERIFY_URL
# and expects JSON: { "valid": true, "validUntil": "YYYY-MM-DDTHH:mm:ssZ" }
LICENSE_KEY=
LICENSE_VERIFY_URL=

# MongoDB and Auth
MONGODB_URI=
JWT_SECRET=super-secret-change-me
JWT_EXPIRES_DAYS=7
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
